@import 'minireset.css'

breakpoint = 600px
gap-1 = .5rem
gap-2 = 1rem
gap-3 = 1.5rem
gap-4 = 2rem
font-1 = 1.5rem
font-2 = 2.5rem
font-3 = 3rem
timing-1 = .25s
timing-2 = .5s
transparency = .5
translucent = transparentify(black transparency)
text = #4a4a4a
link = black
biobg = white
h2color = black
namecolor = black
bgurl = url('https://cdn.jsdelivr.net/gh/kidonng/xuann.wang/assets/bg.webp')

main
  color text
  font-family B612 Mono, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Noto Sans CJK SC', 'Source Han Sans SC', 'Source Han Sans CN', 'Wenquanyi Micro Hei', 'WenQuanYi Zen Hei', 'ST Heiti', SimHei, monospace
  line-height 1.5

a
  color link

  @media (prefers-color-scheme dark)
    color invert(link)

button
  background none
  border 0
  padding 0

.bg
  height 100vh
  background-image bgurl
  background-size cover
  opacity transparency * 1.2

  @media screen and (max-width 1920px)
    background-position-x 40%

  @media (prefers-color-scheme dark)
    background-image linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .5)), bgurl

.bio
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background-color biobg
  transition opacity timing-2, visibility timing-2
  padding gap-3

  @media screen and (min-width breakpoint)
    padding-left 25vw
    padding-right 25vw

  @media (prefers-color-scheme dark)
    background-color invert(biobg)
    color invert(text)

  &.hidden
    opacity 0
    visibility hidden

  a:hover
    text-decoration none
    background-color link
    color biobg

    @media (prefers-color-scheme dark)
      background-color invert(link)
      color invert(biobg)

  h2
    color h2color
    font-size font-1
    margin-bottom gap-1

    @media (prefers-color-scheme dark)
      color invert(h2color)

    &:not(:first-of-type)
      margin-top gap-1

    @media screen and (min-width breakpoint)
      margin-bottom gap-2

      &:not(:first-of-type)
        margin-top gap-2

  p
    margin-bottom gap-1

    @media screen and (min-width breakpoint)
      margin-bottom gap-2

  li
    margin-bottom gap-1

    @media screen and (min-width breakpoint)
      margin-bottom gap-2

    &::before
      content '- '

.button
  width font-1
  cursor pointer
  position absolute
  top gap-3 + gap-1 * .5

  path
    transition fill timing-1

    @media (prefers-color-scheme dark)
      fill invert(black)

  &:hover path
    fill translucent

    @media (prefers-color-scheme dark)
      fill invert(translucent)

.language
  right gap-4 * 2

  @media screen and (min-width breakpoint)
    right 25vw + gap-4 * 2

.close
  right gap-3

  @media screen and (min-width breakpoint)
    right 25vw

.profile
  position absolute
  bottom 0
  user-select none
  -moz-user-select none
  margin gap-2

  @media screen and (min-width breakpoint)
    display flex
    margin gap-4

.avatar
  width 100px
  transition opacity timing-1
  cursor pointer

  @media screen and (min-width breakpoint)
    margin-right gap-4

  &:hover
    opacity transparency

  img
    border-radius 100%

.name
  color namecolor
  font-family Gaegu, cursive
  font-size font-2

  @media screen and (min-width breakpoint)
    font-size font-3

  @media (prefers-color-scheme dark)
    color invert(namecolor)

.links a
  text-decoration none
  transition color timing-1

  &:hover
    color translucent

  @media screen and (max-width breakpoint)
    display block
    margin-bottom gap-1

  @media screen and (min-width breakpoint)
    margin-right gap-2
